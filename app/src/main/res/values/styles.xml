<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gridCells">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounded_border_cell2048</item>
    </style>

    <style name="voidPieceStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/void_senku_piece</item>
    </style>

    <style name="invisiblePiece">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="pieceStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/piece_senku</item>
    </style>
</resources>